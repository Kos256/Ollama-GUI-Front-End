<Application x:Class="Ollama_GUI_Front_End.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Ollama_GUI_Front_End"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Define Exo Font Variants -->
            <FontFamily x:Key="ExoBold">pack://application:,,,/Ollama GUI Front End;component/Assets/Fonts/Exo/#Exo 2.0 Bold</FontFamily>
            <FontFamily x:Key="ExoItalic">pack://application:,,,/Ollama GUI Front End;component/Assets/Fonts/Exo/#Exo 2.0 Italic</FontFamily>
            <FontFamily x:Key="ExoBoldItalic">pack://application:,,,/Ollama GUI Front End;component/Assets/Fonts/Exo/#Exo 2.0 Bold Italic</FontFamily>
            <FontFamily x:Key="ExoRegular">pack://application:,,,/Ollama GUI Front End;component/Assets/Fonts/Exo/#Exo 2.0 Regular</FontFamily>

            <!-- Set default font family to Exo -->
            <Style TargetType="TextElement">
                <Setter Property="FontFamily" Value="{StaticResource ExoRegular}"/>
            </Style>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource ExoRegular}"/>
            </Style>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
